<h2>Cambiar tu contrase単a</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :input_html => { :style =>  'width:30%'}, label: "Nueva contrase単a", required: true, autofocus: true, hint: ("#{@minimum_password_length} caracteres como minimo" if @minimum_password_length) %>
    <%= f.input :password_confirmation, :input_html => { :style =>  'width:30%'}, label: "Confirmar tu nueva contrase単a", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cambiar mi contrase単a" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
