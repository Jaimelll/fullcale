<h2>Iniciar sesión</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :input_html => { :style =>  'width:30%'}, required: false, autofocus: true %>
    <%= f.input :password, :input_html => { :style =>  'width:30%'}, required: false %>
    <%= f.input :remember_me, :input_html => { :style =>  'width:30%'}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Iniciar sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
